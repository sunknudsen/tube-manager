{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": ["./src/**/*"]
}
